void sendTesla(){
  int i = 0;
  radio_T.setTransmitPower(20, PA_MODE_PA1_PA2_20dbm, OCP_OFF); //max power
  radio_T.txBegin();
  tesla.drawText("UP: send", 0, 45, 1, NORMAL);
  tesla.drawText("B: exit", 0, 55, 1, NORMAL);
  delay(400);
  while(1){
    if(tesla.clickA()){
      delay(10);
    }
    if(tesla.clickUP()){
      ledOn();
      for(int i = 0; i < 236; i += 2){
        radio_T.send(1);
        delayMicroseconds(tesla_signal[i]);
        radio_T.send(0);
        delayMicroseconds(tesla_signal[i+1]);
      }
      ledOff();
      delay(24); //24 ms in between codes
    }
    if(tesla.clickDOWN()){
      delay(10);
    }
    if(tesla.clickB()){
      radio_T.standby();
      break;
    }
  }
}
